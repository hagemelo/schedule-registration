{
  "extends": "./ts-pre-config.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/src",
    "experimentalDecorators": true,
    "paths": {
      "@application": [
        "src/application"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@interface": [
        "src/interface"
      ],
      "@interface/*": [
        "src/interface/*"
      ],
      "@config": [
        "src/config"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@domain": [
        "src/domain"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
    }
  }
}